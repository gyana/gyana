{
  "python.pythonPath": ".venv/bin/python",
  "editor.formatOnSave": true,
  "editor.tabSize": 2,
  "editor.linkedEditing": true,
  "editor.rulers": [80, 120],
  "[python]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    },
    "editor.tabSize": 4
  },
  "python.formatting.provider": "black",
  "python.languageServer": "Pylance",
  "html.format.templating": true,
  "html.format.endWithNewline": true,
  "html.format.wrapAttributes": "preserve-aligned",
  "emmet.includeLanguages": {
    "django-html": "html"
  },
  "files.associations": {
    "**/*.html": "django-html",
    "**/templates/**/*.ts": "typescript",
    "**/templates/**/*.tsx": "typescript",
    "**/templates/**/*.txt": "django-txt"
  },
  "[django-html]": {
    "editor.defaultFormatter": "monosans.djlint"
  },
  "djlint.indent": 2,
  "djlint.ignore": ["T003", "H021", "H006", "H013", "H016"],
  "python.testing.pytestArgs": ["--no-migrations", "--disable-pytest-warnings"],
  "python.testing.unittestEnabled": false,
  "python.testing.nosetestsEnabled": false,
  "python.testing.pytestEnabled": true,
  "files.exclude": {
    "apps/widgets/static/fusioncharts/**": true
  }
}
